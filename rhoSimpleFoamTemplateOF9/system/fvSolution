FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-07;
        relTol          0.01;
        smoother        GaussSeidel;
        maxIter         2000;
/*        nCellsInCoarsestLevel 4000;*/
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        nSweeps         2;
        tolerance       1e-06;
        relTol          0.1;
    }

    h
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.01;
    }

    "(k|epsilon)"
    {
        $U;
        tolerance       1e-07;
        relTol          0.1;
    }
    

/*    "(U|e|k|epsilon)"*/
/*    {*/
/*        solver          GAMG;*/
/*        tolerance       1e-08;*/
/*        relTol          0.01;*/
/*        smoother        GaussSeidel;*/
/*        nCellsInCoarsestLevel 2000;*/
/*    }*/


}

SIMPLE
{
    nNonOrthogonalCorrectors 3;
    
    
    /*In case the transonic switch in the fvSolution dictionary is set to false, the contribution of the density correction \rho^' is neglected. 
      For this reason the transonic switch has to be set to false only for low Mach number flow where density fluctuations are small. 
      This renders the pressure equation more expensive to solve. */      
    transonic       yes;
    
    
    consistent      yes;

    residualControl
    {
        p               1e-4;
        U               1e-5;
        h               1e-3;

        // possibly check turbulence fields
        "(k|epsilon|omega)" 1e-3;
    }
    
}

relaxationFactors
{

// SIMPLE
/*    fields*/
/*    {*/
/*        p               0.3;*/
/*        rho             0.05;*/
/*    }*/
/*    equations*/
/*    {*/
/*        U               0.7;*/
/*        "(k|epsilon)"   0.7;*/
/*        h               0.5;*/
/*    }*/

// SIMPLEC

    fields
    {
        p               0.7;
        rho             0.01;
    }
    equations
    {
        U               0.3;
        h               0.3;
        k               0.3;
        epsilon         0.3;
    }

}


