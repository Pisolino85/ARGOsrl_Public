FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $T_initial;

boundaryField
{
    "wall.*"
    {
        type            zeroGradient;
    }

    inlet
    {
        type            fixedValue;
        value           uniform $T_inlet;
    }

    "outle.*"
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      $internalField;
    }


    "symmet.*"
    {
        type            symmetry;
    }
}

