FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include        "include/initialConditions"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

/*A range of wall function models is available in OpenFOAM that are applied as boundary conditions on individual patches. 
This enables diﬀerent wall function models to be applied to diﬀerent wall regions. 
The choice of wall function model is speciﬁed through the turbulent viscosity ﬁeld eqn in the 0/nut ﬁle.
EXAMPLE: nutWallFunction, nutRoughWallFunction, nutUSpaldingWallFunction, nutkWallFunction and nutkAtmWallFunction.
 */

boundaryField
{
    "wall.*"
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    inlet
    {
        type            calculated;
        value           uniform 0;
    }

    "outle.*"
    {
        type            calculated;
        value           uniform 0;
    }

    "symmet.*"
    {
        type            symmetry;
    }

}


